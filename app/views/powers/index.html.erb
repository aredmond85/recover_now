<div class="container">
   <h1 class="row justify-content-center">Power Index</h1>
   <table class="table table-bordered bg-light">
      <thead bgcolor="#959595">
         <tr>
            <th scope="col">Power Type</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
         </tr>
      </thead>
      <tbody>
         <% @powers.each do |power|%>
         <tr>
            <td><%= power.power_type %></td>
            <td><%= link_to "Edit power", edit_power_path(power) %></td>
            <td><%= link_to "Delete power", power_path(power), method: :delete, data: {confirm: "Are you sure?"} %></td>
         </tr>
         <% end %>
      </tbody>
   </table>
   <%= link_to 'New Power', new_power_path, class: "btn btn-primary" %>
</div>