<div class="container">
   <div class="row justify-content-center">
      <div class="col-5">
         <%= simple_form_for @power do |f| %>
         <%= f.input :power_type %>
         <%= f.button :submit, class: "btn-primary" %>
         <%= f.button :button, "Reset", type: "reset", class: "btn-outline-secondary" %>
         <%= button_to "Back", powers_path, class: "btn btn-outline-secondary"%>
         <% end %>
      </div>
   </div>
</div>