<h1>User Index</h1>

<table>
<thead>
<tr>
    <th>Username</th>
    <th>Email</th>
    </tr>
</thead>

<tbody>
<% @users.each do |user|%>
<tr>
    <td><%= user.username %><td>
    <td><%= user.email %><td>
    <td><%= link_to "Edit user", edit_user_path(user) %>
    <td><%= link_to "Delete user", user_path(user), method: :delete, data: {confirm: "Are you sure?"} %>
</tr>
<% end %>
</tbody>
</table>

<%= link_to 'New User', new_user_path %>